# 案例总结生成器配置文件 / Case Summary Generator Configuration File
# 复制此文件为 config.yaml 并根据需要修改配置
# Copy this file to config.yaml and modify the configuration as needed

# AWS配置 / AWS Configuration
aws:
  # 认证方式: "profile" 或 "ak_sk" / Authentication method: "profile" or "ak_sk"
  auth_method: "profile"
  
  # 使用AWS Profile时的配置 / Configuration when using AWS Profile
  profile_name: "default"
  
  # 使用Access Key时的配置 / Configuration when using Access Key
  # access_key_id: "your-access-key-id"
  # secret_access_key: "your-secret-access-key"
  
  # AWS区域 / AWS Region
  region: "us-east-1"

# 模型配置 / Model Configuration
models:
  # Claude系列模型 / Claude Series Models
  claude:
    - id: "anthropic.claude-3-5-sonnet-20241022-v2:0"
      name: "Claude 3.5 Sonnet"
    - id: "anthropic.claude-3-haiku-20240307-v1:0"
      name: "Claude 3 Haiku"
    - id: "anthropic.claude-3-sonnet-20240229-v1:0"
      name: "Claude 3 Sonnet"
  
  # Nova系列模型 / Nova Series Models
  nova:
    - id: "amazon.nova-pro-v1:0"
      name: "Nova Pro"
    - id: "amazon.nova-lite-v1:0"
      name: "Nova Lite"
    - id: "amazon.nova-micro-v1:0"
      name: "Nova Micro"
  
  # DeepSeek系列模型 / DeepSeek Series Models
  deepseek:
    - id: "deepseek.deepseek-v2.5"
      name: "DeepSeek V2.5"
    - id: "deepseek.deepseek-v3"
      name: "DeepSeek V3"
  
  # OpenAI系列模型 / OpenAI Series Models (如果在Bedrock中可用 / if available in Bedrock)
  openai:
    - id: "openai.gpt-4o"
      name: "GPT-4o"
    - id: "openai.gpt-4"
      name: "GPT-4"

# 系统提示词管理配置 / System Prompt Management Configuration
system_prompts:
  # 系统提示词存储文件夹 / System prompts storage folder
  prompts_folder: "./system_prompts"
  
  # 当前激活的系统提示词 / Currently active system prompt
  active_prompt: "default"
  
  # 默认系统提示词配置 / Default system prompt configuration
  default_prompt:
    name: "default"
    content: |
      你是一个专业的案例总结助手。请根据提供的历史参考信息和新的案例输入，生成一个结构化、专业的案例总结。
      
      需要按照历史参考的结构进行总结，在必要的地方以数据进行量化说明，总结确保简练明了。
      
      请保持总结的客观性和专业性。
  
  # 历史参考文件自动管理 / Automatic history reference file management
  auto_create_history_folders: true
  
  # 提示词文件扩展名 / Prompt file extension
  prompt_file_extension: ".md"
  
  # 缓存配置 / Cache configuration
  cache_ttl: 300  # 缓存过期时间（秒） / Cache TTL in seconds
  
  # 安全配置 / Security configuration
  max_prompt_name_length: 100      # 最大提示词名称长度 / Max prompt name length
  max_prompt_content_length: 50000 # 最大提示词内容长度 / Max prompt content length

# 历史参考文件夹 / History Reference Folder
history_folder: "./history_references"

# 应用设置 / Application Settings
app:
  # 应用标题 / Application title
  title: "案例总结生成器 / Case Summary Generator"
  
  # 模型参数 / Model parameters
  max_tokens: 4000      # 最大生成token数 / Maximum tokens to generate
  temperature: 0.7      # 生成温度 / Generation temperature
  
  # 界面配置 / Interface configuration
  theme: "default"      # Gradio主题 / Gradio theme
  show_api: false       # 是否显示API文档 / Whether to show API documentation
  
  # 性能配置 / Performance configuration
  concurrent_limit: 10  # 并发请求限制 / Concurrent request limit
  
  # 日志配置 / Logging configuration
  log_level: "INFO"     # 日志级别: DEBUG, INFO, WARNING, ERROR / Log level
  log_file: "logs/app.log"  # 日志文件路径 / Log file path

# 高级配置 / Advanced Configuration
advanced:
  # 开发模式 / Development mode
  debug: false
  
  # 自动重载 / Auto reload
  auto_reload: false
  
  # 性能监控 / Performance monitoring
  enable_metrics: true
  
  # 安全设置 / Security settings
  enable_input_validation: true
  enable_path_security_check: true
  
  # 备份设置 / Backup settings
  auto_backup: false
  backup_interval: 86400  # 备份间隔（秒） / Backup interval in seconds
  backup_retention: 7     # 备份保留天数 / Backup retention days

